{
  "name": "react-colorful",
  "version": "0.0.1",
  "description": "A tiny color picker component for modern React apps",
  "source": "src/index.js",
  "main": "dist/index.js",
  "module": "dist/index.module.js",
  "esmodule": "dist/index.esmodule.js",
  "umd:main": "dist/index.umd.js",
  "scripts": {
    "start": "parcel examples/src/index.html --out-dir examples/dist --open",
    "lint": "eslint src/**/*.js examples/src/**/*.js",
    "build": "microbundle --entry src/index.js --output dist/index.js --name react-colorful --css-modules",
    "size": "size-limit",
    "test": "npm run size"
  },
  "size-limit": [
    {
      "path": "src/index.js",
      "limit": "1.5 KB"
    }
  ],
  "repository": "omgovich/react-colorful",
  "keywords": [
    "react",
    "color picker",
    "react-component",
    "colorpicker",
    "tiny",
    "color"
  ],
  "author": "Vlad Shilov <omgovich@ya.ru>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/omgovich/react-colorful/issues"
  },
  "homepage": "https://github.com/omgovich/react-colorful",
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "devDependencies": {
    "@size-limit/preset-app": "^4.5.5",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.8",
    "microbundle": "^0.12.3",
    "parcel-bundler": "^1.12.4",
    "postcss-modules": "^3.2.0",
    "prettier": "2.0.5",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "size-limit": "^4.5.5"
  },
  "dependencies": {
    "tinycolor2": "^1.4.1"
  }
}
